<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>vartas</groupId>
    <artifactId>reddit</artifactId>
    <packaging>pom</packaging>
    <version>2.0.1</version>
    <modules>
        <module>api</module>
        <module>io</module>
        <module>stats</module>
        <module>chart</module>
    </modules>

    <properties>

        <!-- .. Libraries ..................................................... -->

        <monticore.version>5.0.5</monticore.version>

        <assertj.version>3.12.2</assertj.version>
        <junit.version>4.12</junit.version>
        <httpclient.version>4.5.9</httpclient.version>
        <commons-text.version>1.7</commons-text.version>
        <json.version>20180813</json.version>
        <jraw.version>1.1.0</jraw.version>
        <guava.version>28.0-jre</guava.version>
        <jfreechart.version>1.5.0</jfreechart.version>

        <!-- .. Plugins ....................................................... -->

        <assembly.plugin>2.5.3</assembly.plugin>
        <compiler.plugin>3.2</compiler.plugin>
        <release.plugin>2.5.1</release.plugin>
        <source.plugin>2.4</source.plugin>
        <surefire.plugin>2.18.1</surefire.plugin>

        <!-- Classifiers -->

        <grammars.classifier>grammars</grammars.classifier>


        <!-- .. Misc .......................................................... -->

        <java.version>1.8</java.version>
        <wagon.provider.version>2.6</wagon.provider.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <!-- == Repositories ==================================================== -->

    <repositories>
        <repository>
            <id>se-nexus</id>
            <url>https://nexus.se.rwth-aachen.de/content/groups/public/</url>
        </repository>

        <repository>
            <id>library</id>
            <name>library</name>
            <url>file:${project.basedir}/libs</url>
        </repository>

        <repository>
            <id>jcenter</id>
            <name>jcenter-bintray</name>
            <url>http://jcenter.bintray.com</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>se-nexus</id>
            <url>https://nexus.se.rwth-aachen.de/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>
</project>